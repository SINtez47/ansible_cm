---
# This is an example playbook to execute Ansible tests.
- name: Verify
  hosts: all
  gather_facts: false
  tasks:
  - name: test dir
    stat:
      path: /tmp/testdir/
    register: directory

  - name: test file
    stat:
      path: /tmp/testdir/test.txt
    register: file


  - name: Test dir & file exist
    assert:
      that:
      - "directory.stat.exists"
      - "file.stat.exist"
